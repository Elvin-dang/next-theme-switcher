{
  "name": "next-theme-switcher",
  "description": "A simple and customizable theme switcher component for React.",
  "version": "0.0.5",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": {
      "default": "./dist/index.css"
    }
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "keywords": [
    "next-themes",
    "theme-switcher",
    "dark-mode",
    "light-mode",
    "next",
    "react",
    "theme",
    "themes",
    "switcher",
    "nextjs"
  ],
  "author": "Elvin Dang <vinhdang871@gmail.com>",
  "homepage": "https://next-theme-switcher.elvindang.info/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Elvin-dang/next-theme-switcher.git"
  },
  "bugs": {
    "url": "https://github.com/Elvin-dang/next-theme-switcher/issues"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17 || ^18 || ^19",
    "react-dom": "^16.8 || ^17 || ^18 || ^19"
  },
  "devDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.5.0"
  }
}
